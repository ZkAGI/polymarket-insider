# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/polymarket_tracker

# Database Connection Pool Settings
# These settings control Prisma's connection pool behavior
# See: https://www.prisma.io/docs/concepts/components/prisma-client/connection-pool
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=10000
DB_CONNECT_TIMEOUT=10000

# Polymarket API Configuration
# Gamma API (REST API for markets data)
GAMMA_API_URL=https://gamma-api.polymarket.com

# CLOB API (Central Limit Order Book API for trades and orders)
CLOB_API_URL=https://clob.polymarket.com

# CLOB WebSocket (real-time trade and order book streams)
CLOB_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market

# Legacy aliases (backwards compatibility)
POLYMARKET_API_URL=https://gamma-api.polymarket.com
POLYMARKET_CLOB_API_URL=https://clob.polymarket.com

# Optional: API Keys (if needed for authenticated endpoints)
POLYMARKET_API_KEY=

# Polygon Network (optional - uses public RPC by default)
# For better performance, consider using a dedicated RPC provider:
# POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID
POLYGON_RPC_URL=

# Polygonscan API (for transaction history)
# Get a free API key at https://polygonscan.com/apis
POLYGONSCAN_API_KEY=

# Telegram Notifications
# Create a bot via @BotFather on Telegram to get your token
# Token format: <bot_id>:<secret> (e.g., 123456789:ABCdefGHIjklMNOpqrsTUVwxyz)
TELEGRAM_BOT_TOKEN=

# Optional: Default chat ID for notifications
TELEGRAM_CHAT_ID=

# Comma-separated list of Telegram user IDs with admin privileges
# These users can broadcast messages and access admin commands
# Get your user ID from @userinfobot on Telegram
TELEGRAM_ADMIN_IDS=

# Discord Notifications
DISCORD_WEBHOOK_URL=

# Email Notifications (using Resend)
# Get your API key at https://resend.com
RESEND_API_KEY=
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=Polymarket Tracker

# Web Push Notifications (VAPID)
# Generate keys with: npx web-push generate-vapid-keys
# Or use the generateVapidKeys function from src/notifications/push
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@your-domain.com

# AI/ML (optional)
# Required for AI-powered features like alert summaries and market analysis
OPENAI_API_KEY=

# Whale Detection Thresholds
WHALE_THRESHOLD_USD=10000
INSIDER_DETECTION_ENABLED=true
