# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/polymarket_tracker

# Polymarket API
POLYMARKET_API_URL=https://gamma-api.polymarket.com
POLYMARKET_CLOB_API_URL=https://clob.polymarket.com

# Optional: API Keys (if needed for authenticated endpoints)
POLYMARKET_API_KEY=

# Notifications (optional)
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email Notifications (using Resend)
# Get your API key at https://resend.com
RESEND_API_KEY=
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=Polymarket Tracker

# AI/ML (optional)
OPENAI_API_KEY=

# Whale Detection Thresholds
WHALE_THRESHOLD_USD=10000
INSIDER_DETECTION_ENABLED=true

# Database Connection Pool Settings
# These settings control Prisma's connection pool behavior
# See: https://www.prisma.io/docs/concepts/components/prisma-client/connection-pool
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=10000
DB_CONNECT_TIMEOUT=10000

# Polygon Network (optional - uses public RPC by default)
POLYGON_RPC_URL=
# For better performance, consider using a dedicated RPC provider:
# POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID

# Polygonscan API (for transaction history)
# Get a free API key at https://polygonscan.com/apis
POLYGONSCAN_API_KEY=
